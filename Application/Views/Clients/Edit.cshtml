@using Hiq.Dxs.SystemSalesman.Application.Models;
@model ClientVM

<div class="card">

    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>

    <div class="card-body">
        <div class="ml-5 mr-5">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control ml-2" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control ml-2" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="BeginDate" class="control-label"></label>
                    <input asp-for="BeginDate" class="form-control ml-2" />
                    <span asp-validation-for="BeginDate" class="text-danger"></span>
                </div>

                <div class="form-group ml-4">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}