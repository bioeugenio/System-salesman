@using Hiq.Dxs.SystemSalesman.Application.Models;
@model JobVM

<div class="card">

    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>

    <div class="card-body">
        <div class="ml-5 mr-5">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control ml-2" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control ml-2" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control ml-2" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Budget" class="control-label"></label>
                    <input asp-for="Budget" class="form-control ml-2" />
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control ml-2" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Rating" class="control-label"></label>
                    <div class="ml-2">
                        <select asp-for="Rating" class="form-control fk-select">
                            <option value="1">&#11088;</option>
                            <option value="2">&#11088;&#11088;</option>
                            <option value="3">&#11088;&#11088;&#11088;</option>
                            <option value="4">&#11088;&#11088;&#11088;&#11088;</option>
                            <option value="5">&#11088;&#11088;&#11088;&#11088;&#11088;</option>
                        </select>
                    </div>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Rated" class="control-label"></label>
                    <input asp-for="Rated" class="form-control ml-2" />
                    <span asp-validation-for="Rated" class="text-danger"></span>
                </div>

               
                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="ClientId" class="control-label"></label>
                    <div class="ml-2">
                        <select asp-items="@ViewBag.Clients" asp-for="ClientId" class="form-control fk-select">
                        </select>
                    </div>

                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>

                <div class="form-group ml-4">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}