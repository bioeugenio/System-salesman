@using Hiq.Dxs.SystemSalesman.Application.Models;
@model ProposalVM

<div class="card">

    <div class="card-header">
        <h2 class="float-left">
            @ViewData["Title"]
        </h2>
    </div>

    <div class="card-body">
        <div class="ml-5 mr-5">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Sender" class="control-label"></label>
                    <input asp-for="Sender" class="form-control ml-2" />
                    <span asp-validation-for="Sender" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="Message" class="control-label"></label>
                    <input asp-for="Message" class="form-control ml-2" />
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-3 col-md-6 col-sm-12">
                    <label asp-for="JobId" class="control-label"></label>
                    <div class="ml-2">
                        <select asp-items="@ViewBag.Jobs" asp-for="JobId" class="form-control fk-select">
                        </select>
                    </div>

                    <span asp-validation-for="JobId" class="text-danger"></span>
                </div>

                <div class="form-group ml-4">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}